<script>
function getCSVData() {
    var dataSource = [];
    var jsonObject = window.csvdata.split(/\r?\n|\r/);
    for (var i = 0; i < jsonObject.length; i++) {
        if (!ej.base.isNullOrUndefined(jsonObject[i]) && jsonObject[i] !== '') {
            dataSource.push(jsonObject[i].split(','));
        }
    }
    return dataSource;
}

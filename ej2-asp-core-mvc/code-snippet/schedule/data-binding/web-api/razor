@using Syncfusion.EJ2
@using Syncfusion.EJ2.Schedule


<div class="control-section">
    <div class="content-wrapper">
        @Html.EJS().Schedule("schedule").Width("100%").Height("650px").CurrentView(View.Month).EventSettings(es => es.DataSource(dataManager =>
            {
                dataManager.Url("https://services.syncfusion.com/aspnet/production/api/schedule").CrossDomain(true).Adaptor("WebApiAdaptor");
            })).Readonly(true).Render()
    </div>
</div>

<div class="col-lg-12 control-section e-img-editor-sample">
    @Html.EJS().ImageEditor("image-editor").Created("created").Toolbar(new string[] { }).Render()
</div>
@Html.EJS().Button("straightenLeft").CssClass("e-primary").Content("Straighten Left").Click("straightenLeftClick").Render()
@Html.EJS().Button("straightenRight").CssClass("e-primary").Content("Straighten Right").Click("straightenRightClick").Render()
@Html.EJS().Button("reset").CssClass("e-primary").Content("Reset").Click("resetClick").Render()

<script>
    var straighten = 0;
    function created() {
        var imageEditorObj = ej.base.getComponent(document.getElementById('image-editor'), 'image-editor');
        if (ej.base.Browser.isDevice) {
            imageEditorObj.open('https://ej2.syncfusion.com/demos/src/image-editor/images/flower.png');
        } else {
            imageEditorObj.open('https://ej2.syncfusion.com/demos/src/image-editor/images/bridge.png');
        }
    }

    function straightenLeftClick() {
        var imgObj = ej.base.getComponent(document.getElementById('image-editor'), 'image-editor');
        straighten -= 3;
        imgObj.straightenImage(straighten);
    }
    function straightenRightClick() {
        var imgObj = ej.base.getComponent(document.getElementById('image-editor'), 'image-editor');
        straighten += 3;
        imgObj.straightenImage(straighten);
    }
    function resetClick() {
        var imgObj = ej.base.getComponent(document.getElementById('image-editor'), 'image-editor');
        straighten = 0;
        imgObj.straightenImage(straighten);
    }

</script>

<style>
    .image-editor {
        margin: 0 auto;
    }

    .e-img-editor-sample {
        height: 80vh;
        width: 100%;
    }

    @@media only screen and (max-width: 700px) {
        .e-img-editor-sample {
            height: 75vh;
            width: 100%;
        }
    }

    .control-wrapper {
        height: 100%;
    }
</style>